<div class="home-callout text-center container-fluid">
  <h1>Welcome to DevMatch</h1>
  <h3>WHERE LA-DEE-DA GOTDAMN</h3>
</div>
<div class="container home-signup-links">
  <div class="row">
    <% if user_signed_in? %>
      <div class="col-md-6">
        <div class="well">
          <h2 class="text-center">Your Profile</h2>
          <% if current_user.profile %>
            <%= link_to "Edit your profile", edit_user_profile_path(current_user.id), class: 'btn btn-info btn-lg btn-block' %>
            <%= link_to "View your profile", user_path(current_user.id), class: 'btn btn-info btn-lg btn-block' %>
          <% else %>
            <p class="text-center">Create your profile and link yourself with the community!</p>
            <%= link_to "Create your profile!", new_user_profile_path(user_id: current_user.id), class: 'btn btn-warning btn-lg btn-block' %>
          <% end %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="well">
          <h2 class="text-center">The Community</h2>
          <p class="text-center">Visit the community to meet other developers, entrepreneurs and investors!</p>
          <%= link_to "Visit the community", "#", class: 'btn btn-success btn-lg btn-block' %>
        </div>
      </div>
    <% else %>
      <div class="col-md-6">
        <div class="well">
          <h2 class="text-center">BASIC MEMBERSHIP</h2>
          <h4 class="text-center">Sign up with basic to receive free access to the community</h4>
          <br>
          <%= link_to "Sign up for Basic", new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-info btn-lg btn-block' %>
        </div>
      </div>
      
      <div class="col-md-6">
        <div class="well">
          <h2 class="text-center">PREMIUM MEMBERSHIP</h2>
          <h4 class="text-center">Sign up for premium to receive full access to the community as well as added benefits</h4>
        
          <%= link_to "Sign up for PREMIUM", new_user_registration_path(plan: @premium_plan.id), class: 'btn btn-success btn-lg btn-block' %>
        </div>
      </div>
    <% end %>
  </div>
</div>